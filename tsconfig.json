{
  "extends": "@tsconfig/strictest/tsconfig.json",
  "compilerOptions": {
    "module": "Node16",
    "moduleResolution": "Node16",
    "target": "ES2023",
    "noEmit": true
  },
  "tsimp": {
    "compilerOptions": {
      "noCheck": true
    }
  },
  "exclude": [
    "node_modules",
    "**/node_modules/*",
    "dist"
  ]
}
